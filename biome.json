{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off",
        "useConst": { "fix": "none", "level": "warn" }
      },
      "correctness": {
        "noUnusedVariables": { "fix": "none", "level": "warn" }
      }
    },
    "includes": ["src", "!src/openapi/**", "openapi", "!openapi/client/**"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double"
    }
  }
}
